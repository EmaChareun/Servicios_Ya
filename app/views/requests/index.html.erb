<div class="container">

  <%  if current_user.role == "profesional" %>
    <br>
    <h1>Tus trabajos</h1>
    <br>
    <% @my_requests.each do |request| %>
      <div>
        <p> <%= link_to request.title, request_path(request.id) %> </p>
        <p> <%= "Ubicacion: #{request.city}" %> </p>
        <p> <%= "Detalles: #{request.detail}" %> </p>
        <% request.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end%>
        <p> <%= @review.request_id %> </p>
      </div>
    <% end %>
    <br>
        <br>
    <h1>Tus solicitudes</h1>
      <% @requests.each do |request| %>
    <div>
      <p> <%= link_to request.title, request_path(request.id)  %> </p>
      <p> <%= "Ubicacion: #{request.city}" %> </p>
      <p> <%= "Detalles: #{request.detail}" %> </p>
      <% request.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end%>
      <p> <%= @review.request_id %> </p>
    </div>
    <br>
    <% end %>
  <%  else current_user.role == "cliente" %>
    <br>
    <h1>Tus solicitudes</h1>
      <% @requests.each do |request| %>
      <div class="div">
        <p> <%= link_to request.title, request_path(request.id)  %> </p>
        <p> <%= "Ubicacion: #{request.city}" %> </p>
        <p> <%= "Detalles: #{request.detail}" %> </p>
        <% request.photos.each do |photo| %>
           <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end%>
      </div>
    <br>
    <% end %>
  <% end %>
  <%= link_to 'volver a busquedas', users_path, class: 'btn btn-primary' %>
</div>
