<div class="container col-6 mt-5">
  <h3>Titulo: <%= @request.title %></h3>
  <p>Estado: <%= @request.status %></p>
  <ul>
    <li>Detalles: <%= @request.detail %></li>
    <li>Dirección: <%= @request.city %></li>
    <li>Comentarios del profesional: <%= @request.comment %></li>
    <li>Precio: <%= @request.price %></li>
    <li>
      <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% @request.photos.each do |photo| %> </p>
              <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
            <% end %>
          </div>
          <div class="carousel-item">
            <% @request.photos.each do |photo| %> </p>
              <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
            <% end %>
          </div>
          <div class="carousel-item">
            <% @request.photos.each do |photo| %> </p>
              <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  </ul>

  <% if @request.professional_id != current_user.id %>
    <% if @request.reviews.empty? %>
      <%= link_to 'Hacer una reseña', new_request_review_path(@request.id) , class: 'btn btn-default' %>
    <% else %>
     <h3>Tu reseña</h3>
      <p> Comentario: <%= @request.reviews.first.content %> </p>
      <p> Rating: <%= @request.reviews.first.rating %> </p>
    <% end %>
  <% end %>
  <%= link_to 'Editar solicitud', edit_request_path(@request.id) , class: 'btn btn-default' %>
